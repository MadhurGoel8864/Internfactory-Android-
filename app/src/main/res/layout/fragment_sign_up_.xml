<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2D81F7"
    tools:context=".SignUp_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="267dp"
        android:layout_height="248dp"
        android:src="@drawable/image"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/first_name"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="60dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginTop="14dp"
        android:hint="First Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/first_name_inp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_sing_in"
            android:inputType="text"
            android:textColor="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/last_name"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="60dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginTop="16dp"
        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/last_name_inp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_sing_in"
            android:inputType="text"
            android:textColor="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/email_box"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="60dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginTop="16dp"
        android:hint="Email Id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_inp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_sing_in"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/password_inp"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="60dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginTop="16dp"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/email_box">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass_inp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_sing_in"
            android:inputType="textPassword"
            android:textColor="@color/white"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:enabled="false"
        android:textStyle="bold"
        android:background="@drawable/custom_login_btn"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_inp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_btn"
        android:layout_marginTop="15dp"
        android:id="@+id/layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Already Registered?"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:padding="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="logInFrag"
            android:textStyle="bold"
            android:text="Login"
            android:textAllCaps="false"
            android:background="#2D81F7"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>