<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2D81F7"
    tools:context=".SignIn_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="268dp"
        android:layout_height="248dp"
        android:src="@drawable/image"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:paddingRight="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_sing_in"
        android:paddingLeft="15dp"
        android:hint="Email ID"
        android:textColorHint="#E2E2E2"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/password_inp"
        app:hintTextColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:hint="Password"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/ed1">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_sing_in"
            android:inputType="textPassword"
            android:textColor="@color/white"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/forgot_pass_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="#2D81F7"
        android:padding="0dp"
        style="?android:attr/borderlessButtonStyle"

        android:text="Forgot Password?"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/login_btn"
        app:layout_constraintTop_toBottomOf="@+id/password_inp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="LOGIN"
        android:enabled="false"
        android:background="@drawable/custom_login_btn"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_inp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account?   "
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sign_up_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2D81F7"

            android:padding="0dp"
            android:text="Create one" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>